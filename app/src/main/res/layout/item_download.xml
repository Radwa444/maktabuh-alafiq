<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/cartainer_data_cart"
    android:layout_width="match_parent"
    android:layout_height="165dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageDo"
            android:layout_width="90dp"
            android:layout_height="135dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/book1" />

        <TextView
            android:id="@+id/title_Do"
            style="@style/textLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="10dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/imageDo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/author_Do"
            style="@style/textLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/title_Do"
            app:layout_constraintTop_toBottomOf="@+id/title_Do" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:progressTint="@color/primary_color"
            android:rating="4"
            android:rotationY="180"
            app:layout_constraintEnd_toEndOf="@+id/author_Do"
            app:layout_constraintTop_toBottomOf="@+id/author_Do" />

        <ImageView
            android:id="@+id/Download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_done_download" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>